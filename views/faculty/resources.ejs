<%- include('partials/header') %>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-textHeading">Learning Resources</h1>
            <p class="text-textBody">Upload and manage educational resources for students</p>
        </div>
        <button id="addResourceBtn" class="btn-primary">
            <i class="fas fa-plus mr-2"></i>
            Add Resource
        </button>
    </div>

    <!-- Resource Stats -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="card">
            <div class="text-center">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-book text-primary text-xl"></i>
                </div>
                <p class="text-2xl font-bold text-textHeading"><%= resources.length %></p>
                <p class="text-sm text-textBody">Total Resources</p>
            </div>
        </div>
        <div class="card">
            <div class="text-center">
                <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-code text-secondary text-xl"></i>
                </div>
                <p class="text-2xl font-bold text-textHeading">45</p>
                <p class="text-sm text-textBody">Web Dev</p>
            </div>
        </div>
        <div class="card">
            <div class="text-center">
                <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-brain text-accent text-xl"></i>
                </div>
                <p class="text-2xl font-bold text-textHeading">32</p>
                <p class="text-sm text-textBody">AI/ML</p>
            </div>
        </div>
        <div class="card">
            <div class="text-center">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-chart-line text-purple-600 text-xl"></i>
                </div>
                <p class="text-2xl font-bold text-textHeading">28</p>
                <p class="text-sm text-textBody">Data Science</p>
            </div>
        </div>
    </div>

    <!-- Resources Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% resources.forEach(resource => { %>
            <div class="card hover:shadow-md transition-shadow">
                <div class="flex justify-between items-start mb-4">
                    <div class="flex-1">
                        <span class="px-2 py-1 bg-primary/10 text-primary text-xs rounded-full"><%= resource.topic %></span>
                    </div>
                    <div class="flex space-x-2">
                        <button class="text-gray-400 hover:text-gray-600">
                            <i class="fas fa-edit text-sm"></i>
                        </button>
                        <button class="text-gray-400 hover:text-red-600">
                            <i class="fas fa-trash text-sm"></i>
                        </button>
                    </div>
                </div>
                
                <h4 class="font-semibold text-textHeading mb-2"><%= resource.title %></h4>
                <p class="text-sm text-textBody mb-4"><%= resource.description %></p>
                
                <div class="flex justify-between items-center">
                    <span class="text-xs text-gray-500"><%= new Date(resource.uploadDate).toLocaleDateString() %></span>
                    <a href="<%= resource.link %>" target="_blank" class="text-sm text-primary hover:underline">
                        <i class="fas fa-external-link-alt mr-1"></i>
                        View Resource
                    </a>
                </div>
            </div>
        <% }); %>
    </div>

    <!-- Empty State -->
    <% if (resources.length === 0) { %>
        <div class="card text-center py-16">
            <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-book text-gray-400 text-3xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-textHeading mb-2">No Resources Yet</h3>
            <p class="text-textBody mb-6">Start building your resource library by uploading educational materials.</p>
            <button class="btn-primary">Upload Your First Resource</button>
        </div>
    <% } %>
</div>

<!-- Add Resource Modal -->
<div id="resourceModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-semibold text-textHeading">Add New Resource</h3>
            <button id="closeResourceModal" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <form id="resourceForm">
            <div class="space-y-4">
                <div>
                    <label for="resourceTitle" class="block text-sm font-medium text-textBody mb-2">Title</label>
                    <input type="text" id="resourceTitle" name="title" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary">
                </div>
                
                <div>
                    <label for="resourceDescription" class="block text-sm font-medium text-textBody mb-2">Description</label>
                    <textarea id="resourceDescription" name="description" required rows="3" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary"></textarea>
                </div>
                
                <div>
                    <label for="resourceLink" class="block text-sm font-medium text-textBody mb-2">Resource Link</label>
                    <input type="url" id="resourceLink" name="link" required placeholder="https://" class="w-full p-3 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary">
                </div>
                
                <div>
                    <label for="resourceTopic" class="block text-sm font-medium text-textBody mb-2">Topic Tag</label>
                    <select id="resourceTopic" name="topic" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary">
                        <option value="">Select topic</option>
                        <option value="Web Dev">Web Development</option>
                        <option value="AI/ML">AI/ML</option>
                        <option value="Data Science">Data Science</option>
                        <option value="Mobile Dev">Mobile Development</option>
                        <option value="DevOps">DevOps</option>
                        <option value="Cybersecurity">Cybersecurity</option>
                        <option value="UI/UX">UI/UX Design</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>
            
            <div class="flex space-x-4 mt-6">
                <button type="button" id="cancelResourceBtn" class="flex-1 btn-outline">Cancel</button>
                <button type="submit" class="flex-1 btn-primary">Upload Resource</button>
            </div>
        </form>
    </div>
</div>

<script>
    const addResourceBtn = document.getElementById('addResourceBtn');
    const resourceModal = document.getElementById('resourceModal');
    const closeResourceModal = document.getElementById('closeResourceModal');
    const cancelResourceBtn = document.getElementById('cancelResourceBtn');
    const resourceForm = document.getElementById('resourceForm');

    // Show modal
    addResourceBtn.addEventListener('click', () => {
        resourceModal.classList.remove('hidden');
    });

    // Hide modal
    [closeResourceModal, cancelResourceBtn].forEach(btn => {
        btn.addEventListener('click', () => {
            resourceModal.classList.add('hidden');
            resourceForm.reset();
        });
    });

    // Hide modal when clicking outside
    resourceModal.addEventListener('click', (e) => {
        if (e.target === resourceModal) {
            resourceModal.classList.add('hidden');
            resourceForm.reset();
        }
    });

    // Handle form submission
    resourceForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(resourceForm);
        const data = {
            title: formData.get('title'),
            description: formData.get('description'),
            link: formData.get('link'),
            topic: formData.get('topic')
        };
        
        try {
            const response = await fetch('/api/upload-resource', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            });
            
            const result = await response.json();
            
            if (result.success) {
                resourceModal.classList.add('hidden');
                resourceForm.reset();
                showSuccessMessage(result.message);
                
                // Reload page after delay
                setTimeout(() => {
                    window.location.reload();
                }, 2000);
            }
        } catch (error) {
            console.error('Error:', error);
        }
    });
</script>

<%- include('partials/footer') %>