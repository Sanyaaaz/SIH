            alertDiv.innerHTML = `
                <div class="flex items-center space-x-2">
                    <i class="fas fa-check-circle"></i>
                    <span>${message}</span>
                </div>
            `;
            
            document.body.appendChild(alertDiv);
            
            // Slide in
            setTimeout(() => {
                alertDiv.classList.remove('translate-x-full');
            }, 100);
            
