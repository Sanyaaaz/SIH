<%- include('partials/header') %>

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-textHeading">Company Connections</h1>
            <p class="text-textBody">Manage your connections with companies, NGOs, and government institutes</p>
        </div>
        <button id="inviteBtn" class="btn-primary">
            <i class="fas fa-plus mr-2"></i>
            Invite Company
        </button>
    </div>

    <!-- Connection Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="card">
            <div class="text-center">
                <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-handshake text-accent text-xl"></i>
                </div>
                <p class="text-2xl font-bold text-textHeading">3</p>
                <p class="text-sm text-textBody">Connected</p>
            </div>
        </div>
        <div class="card">
            <div class="text-center">
                <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-clock text-secondary text-xl"></i>
                </div>
                <p class="text-2xl font-bold text-textHeading">2</p>
                <p class="text-sm text-textBody">Pending</p>
            </div>
        </div>
        <div class="card">
            <div class="text-center">
                <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mx-auto mb-3">
                    <i class="fas fa-paper-plane text-primary text-xl"></i>
                </div>
                <p class="text-2xl font-bold text-textHeading">1</p>
                <p class="text-sm text-textBody">Invited</p>
            </div>
        </div>
    </div>

    <!-- Companies List -->
    <div class="card">
        <h3 class="font-semibold text-textHeading mb-6">Your Connections</h3>
        <div class="space-y-4">
            <% companies.forEach(company => { %>
                <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors">
                    <div class="flex items-center space-x-4">
                        <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center">
                            <span class="text-white font-semibold text-sm"><%= company.avatar %></span>
                        </div>
                        <div>
                            <h4 class="font-medium text-textHeading"><%= company.name %></h4>
                            <p class="text-sm text-textBody"><%= company.type %></p>
                        </div>
                    </div>
                    
                    <div class="flex items-center space-x-3">
                        <% if (company.status === 'connected') { %>
                            <span class="px-3 py-1 bg-accent/10 text-accent text-sm rounded-full">Connected</span>
                            <a href="/chat/<%= company.id %>" class="btn-outline text-sm">
                                <i class="fas fa-comments mr-1"></i>
                                Chat
                            </a>
                        <% } else if (company.status === 'pending') { %>
                            <span class="px-3 py-1 bg-secondary/10 text-secondary text-sm rounded-full">Pending</span>
                            <button class="text-gray-400 cursor-not-allowed text-sm">
                                <i class="fas fa-comments mr-1"></i>
                                Chat
                            </button>
                        <% } else { %>
                            <span class="px-3 py-1 bg-gray-100 text-gray-600 text-sm rounded-full">Invited</span>
                            <button class="text-gray-400 cursor-not-allowed text-sm">
                                <i class="fas fa-comments mr-1"></i>
                                Chat
                            </button>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<!-- Invite Modal -->
<div id="inviteModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg p-8 max-w-md w-full mx-4">
        <div class="flex justify-between items-center mb-6">
            <h3 class="text-lg font-semibold text-textHeading">Invite Company</h3>
            <button id="closeModal" class="text-gray-500 hover:text-gray-700">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <form id="inviteForm">
            <div class="space-y-4">
                <div>
                    <label for="companyName" class="block text-sm font-medium text-textBody mb-2">Company Name</label>
                    <input type="text" id="companyName" name="name" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary">
                </div>
                
                <div>
                    <label for="companyEmail" class="block text-sm font-medium text-textBody mb-2">Contact Email</label>
                    <input type="email" id="companyEmail" name="email" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary">
                </div>
                
                <div>
                    <label for="companyType" class="block text-sm font-medium text-textBody mb-2">Organization Type</label>
                    <select id="companyType" name="type" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-primary focus:border-primary">
                        <option value="">Select type</option>
                        <option value="Private Company">Private Company</option>
                        <option value="NGO">NGO</option>
                        <option value="Government">Government Institute</option>
                    </select>
                </div>
            </div>
            
            <div class="flex space-x-4 mt-6">
                <button type="button" id="cancelBtn" class="flex-1 btn-outline">Cancel</button>
                <button type="submit" class="flex-1 btn-primary">Send Invitation</button>
            </div>
        </form>
    </div>
</div>

<script>
    const inviteBtn = document.getElementById('inviteBtn');
    const inviteModal = document.getElementById('inviteModal');
    const closeModal = document.getElementById('closeModal');
    const cancelBtn = document.getElementById('cancelBtn');
    const inviteForm = document.getElementById('inviteForm');

    // Show modal
    inviteBtn.addEventListener('click', () => {
        inviteModal.classList.remove('hidden');
    });

    // Hide modal
    [closeModal, cancelBtn].forEach(btn => {
        btn.addEventListener('click', () => {
            inviteModal.classList.add('hidden');
            inviteForm.reset();
        });
    });

    // Hide modal when clicking outside
    inviteModal.addEventListener('click', (e) => {
        if (e.target === inviteModal) {
            inviteModal.classList.add('hidden');
            inviteForm.reset();
        }
    });

    // Handle form submission
    inviteForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(inviteForm);
        const data = {
            name: formData.get('name'),
            email: formData.get('email'),
            type: formData.get('type')
        };
        
        try {
            const response = await fetch('/api/invite-company', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            });
            
            const result = await response.json();
            
            if (result.success) {
                inviteModal.classList.add('hidden');
                inviteForm.reset();
                showSuccessMessage(result.message);
                
                // Reload page after delay
                setTimeout(() => {
                    window.location.reload();
                }, 2000);
            }
        } catch (error) {
            console.error('Error:', error);
        }
    });
</script>

