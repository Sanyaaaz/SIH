<%- include('partials/header') %>

<style>
/* ====== Global ====== */
body {
  font-family: Arial, sans-serif;
  color: #111827;
  background: #f9fafb;
  margin: 0;
  padding: 0;
}

.dashboard-container {
  padding: 20px;
  max-width: 1200px;
  margin: 0 auto;
}

/* ====== Page Header ====== */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30px;
}

.page-title {
  font-size: 24px;
  font-weight: bold;
  color: #1f2937;
}

.page-subtitle {
  color: #6b7280;
  font-size: 14px;
}

/* ====== Buttons ====== */
.btn {
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
  border: none;
  display: inline-flex;
  align-items: center;
  gap: 6px;
}

.btn-primary {
  background-color: #4f46e5;
  color: white;
}

.btn-primary:hover {
  background-color: #4338ca;
}

.btn-outline {
  border: 1px solid #d1d5db;
  background: transparent;
  color: #374151;
}

.btn-outline:hover {
  background: #f3f4f6;
}

/* ====== Grid ====== */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
  margin-bottom: 30px;
}

/* ====== Cards ====== */
.card {
  background: #fff;
  border: 1px solid #e5e7eb;
  border-radius: 10px;
  padding: 20px;
}

.card-content {
  text-align: center;
}

.icon-box {
  width: 50px;
  height: 50px;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 10px;
  font-size: 20px;
}

.icon-box.primary {
  background: rgba(79, 70, 229, 0.1);
  color: #4f46e5;
}

.icon-box.accent {
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.icon-box.secondary {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
}

.icon-box.purple {
  background: #ede9fe;
  color: #7c3aed;
}

.stat-value {
  font-size: 22px;
  font-weight: bold;
  color: #111827;
}

.stat-label {
  font-size: 14px;
  color: #6b7280;
}

/* ====== Table ====== */
table {
  width: 100%;
  border-collapse: collapse;
}

th {
  text-align: left;
  padding-bottom: 12px;
  font-size: 14px;
  color: #6b7280;
  border-bottom: 1px solid #e5e7eb;
}

td {
  padding: 16px 8px;
  border-bottom: 1px solid #f3f4f6;
  font-size: 14px;
  color: #374151;
}

.table-avatar {
  display: flex;
  align-items: center;
  gap: 10px;
}

.table-avatar-circle {
  width: 40px;
  height: 40px;
  background: #4f46e5;
  border-radius: 50%;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

/* ====== Modal ====== */
#searchModal {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.5);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 50;
}

#searchModal.active {
  display: flex;
}

.modal-content {
  background: white;
  border-radius: 10px;
  padding: 24px;
  width: 100%;
  max-width: 500px;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.modal-header h3 {
  font-size: 18px;
  font-weight: bold;
  color: #1f2937;
}

.modal-header button {
  background: none;
  border: none;
  font-size: 18px;
  color: #6b7280;
  cursor: pointer;
}

.modal-header button:hover {
  color: #374151;
}

.modal-form label {
  font-size: 14px;
  color: #6b7280;
  display: block;
  margin-bottom: 6px;
}

.modal-form input {
  width: 100%;
  padding: 10px;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 14px;
}

.modal-actions {
  display: flex;
  gap: 10px;
  margin-top: 20px;
}

.search-results {
  margin-top: 20px;
  border-top: 1px solid #e5e7eb;
  padding-top: 20px;
}
</style>

<div class="dashboard-container">
    <!-- Page Header -->
    <div class="page-header">
        <div>
            <h1 class="page-title">Student Connections</h1>
            <p class="page-subtitle">Manage student certificates, LORs, and track their progress</p>
        </div>
        <button id="searchBtn" class="btn btn-primary">
            <i class="fas fa-search"></i>
            Search Student
        </button>
    </div>

    <!-- Student Stats -->
    <div class="stats-grid">
        <div class="card">
            <div class="card-content">
                <div class="icon-box primary">
                    <i class="fas fa-users"></i>
                </div>
                <p class="stat-value">150</p>
                <p class="stat-label">Total Students</p>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <div class="icon-box accent">
                    <i class="fas fa-briefcase"></i>
                </div>
                <p class="stat-value">45</p>
                <p class="stat-label">With Internships</p>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <div class="icon-box secondary">
                    <i class="fas fa-certificate"></i>
                </div>
                <p class="stat-value">89</p>
                <p class="stat-label">Certificates Issued</p>
            </div>
        </div>
        <div class="card">
            <div class="card-content">
                <div class="icon-box purple">
                    <i class="fas fa-file-alt"></i>
                </div>
                <p class="stat-value">12</p>
                <p class="stat-label">Pending LOR</p>
            </div>
        </div>
    </div>

    <!-- Students List -->
    <div class="card">
        <div class="page-header" style="margin-bottom: 20px;">
            <h3 class="page-title" style="font-size: 16px;">Your Students</h3>
            <div>
                <button class="btn btn-outline">Filter</button>
                <button class="btn btn-outline">Sort</button>
            </div>
        </div>
        
        <div style="overflow-x:auto;">
            <table>
                <thead>
                    <tr>
                        <th>Student</th>
                        <th>ABC ID</th>
                        <th>Internships</th>
                        <th>Certificates</th>
                        <th>Courses</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student => { %>
                        <tr>
                            <td>
                                <div class="table-avatar">
                                    <div class="table-avatar-circle">
                                        <%= student.name.split(' ').map(n => n[0]).join('') %>
                                    </div>
                                    <div>
                                        <p style="font-weight:500;"><%= student.name %></p>
                                        <p style="font-size:13px;color:#6b7280;">Student</p>
                                    </div>
                                </div>
                            </td>
                            <td><%= student.abcId %></td>
                            <td><span class="btn-outline"><%= student.internships %></span></td>
                            <td><span class="btn-outline"><%= student.certificates %></span></td>
                            <td><span class="btn-outline"><%= student.courses %></span></td>
                            <td>
                                <button class="btn btn-primary">Approve</button>
                                <button class="btn btn-outline">LOR</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Search Student Modal -->
<div id="searchModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Search Student</h3>
            <button id="closeSearchModal"><i class="fas fa-times"></i></button>
        </div>
        
        <form id="searchForm" class="modal-form">
            <label for="abcId">ABC ID</label>
            <input type="text" id="abcId" name="abcId" required placeholder="Enter student's ABC ID">
            
            <div class="modal-actions">
                <button type="button" id="cancelSearchBtn" class="btn btn-outline">Cancel</button>
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
        
        <!-- Search Results -->
        <div id="searchResults" class="search-results" style="display:none;">
            <div id="studentInfo"></div>
        </div>
    </div>
</div>

<script>
    const searchBtn = document.getElementById('searchBtn');
    const searchModal = document.getElementById('searchModal');
    const closeSearchModal = document.getElementById('closeSearchModal');
    const cancelSearchBtn = document.getElementById('cancelSearchBtn');
    const searchForm = document.getElementById('searchForm');
    const searchResults = document.getElementById('searchResults');
    const studentInfo = document.getElementById('studentInfo');

    // Show modal
    searchBtn.addEventListener('click', () => {
        searchModal.classList.add('active');
    });

    // Hide modal
    [closeSearchModal, cancelSearchBtn].forEach(btn => {
        btn.addEventListener('click', () => {
            searchModal.classList.remove('active');
            searchForm.reset();
            searchResults.style.display = 'none';
        });
    });

    // Hide modal when clicking outside
    searchModal.addEventListener('click', (e) => {
        if (e.target === searchModal) {
            searchModal.classList.remove('active');
            searchForm.reset();
            searchResults.style.display = 'none';
        }
    });

    // Handle search form submission
    searchForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(searchForm);
        const abcId = formData.get('abcId');
        
        try {
            const response = await fetch('/api/search-student', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ abcId }),
            });
            
            const result = await response.json();
            
            if (result.student) {
                const student = result.student;
                studentInfo.innerHTML = `
                    <div style="text-align:center;">
                        <div class="table-avatar-circle" style="width:60px;height:60px;font-size:20px;margin:0 auto 10px;">
                            ${student.name.split(' ').map(n => n[0]).join('')}
                        </div>
                        <h4 style="font-weight:600;margin-bottom:5px;">${student.name}</h4>
                        <p style="font-size:14px;color:#6b7280;margin-bottom:10px;">ABC ID: ${student.abcId}</p>
                        
                        <div style="display:flex;justify-content:space-around;">
                            <div><p class="stat-value">${student.internships}</p><p class="stat-label">Internships</p></div>
                            <div><p class="stat-value">${student.certificates}</p><p class="stat-label">Certificates</p></div>
                            <div><p class="stat-value">${student.courses}</p><p class="stat-label">Courses</p></div>
                        </div>
                        
                        <div style="margin-top:15px;display:flex;gap:10px;">
                            <button class="btn btn-outline" style="flex:1;">Approve Certificate</button>
                            <button class="btn btn-primary" style="flex:1;">Provide LOR</button>
                        </div>
                    </div>
                `;
                searchResults.style.display = 'block';
            } else {
                studentInfo.innerHTML = `
                    <div style="text-align:center;color:#6b7280;">
                        <i class="fas fa-user-slash" style="font-size:40px;margin-bottom:10px;"></i>
                        <p>No student found with ABC ID: ${abcId}</p>
                    </div>
                `;
                searchResults.style.display = 'block';
            }
        } catch (error) {
            console.error('Error:', error);
        }
    });
</script>

<%- include('partials/footer') %>
