<%- include('partials/header') %>

<main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <!-- Welcome Section -->
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-brand-heading">Welcome back, TechCorp Industries!</h1>
        <p class="text-brand-text mt-1">Here's what's happening with your internship programs today.</p>
    </div>

    <!-- Quick Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center">
                <div class="p-2 bg-brand-primary bg-opacity-10 rounded-lg">
                    <i class="fas fa-briefcase text-brand-primary text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-brand-text">Active Internships</p>
                    <p class="text-2xl font-bold text-brand-heading">12</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center">
                <div class="p-2 bg-brand-secondary bg-opacity-10 rounded-lg">
                    <i class="fas fa-users text-brand-secondary text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-brand-text">Total Applications</p>
                    <p class="text-2xl font-bold text-brand-heading">248</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center">
                <div class="p-2 bg-brand-success bg-opacity-10 rounded-lg">
                    <i class="fas fa-user-check text-brand-success text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-brand-text">Shortlisted</p>
                    <p class="text-2xl font-bold text-brand-heading">56</p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200 hover:shadow-md transition-shadow">
            <div class="flex items-center">
                <div class="p-2 bg-purple-100 rounded-lg">
                    <i class="fas fa-chart-line text-purple-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-brand-text">Health Score</p>
                    <p class="text-2xl font-bold text-brand-heading">8.5/10</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <h2 class="text-lg font-semibold text-brand-heading mb-4">Quick Actions</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <a href="/post-internship" class="group p-4 border border-gray-200 rounded-lg hover:border-brand-primary hover:shadow-sm transition-all">
                    <div class="flex items-center">
                        <i class="fas fa-plus text-brand-primary text-lg group-hover:scale-110 transition-transform"></i>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-brand-heading">Post Internship</p>
                            <p class="text-xs text-brand-text">Create new opportunity</p>
                        </div>
                    </div>
                </a>
                
                <a href="/manage-applications" class="group p-4 border border-gray-200 rounded-lg hover:border-brand-secondary hover:shadow-sm transition-all">
                    <div class="flex items-center">
                        <i class="fas fa-list text-brand-secondary text-lg group-hover:scale-110 transition-transform"></i>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-brand-heading">Manage Applications</p>
                            <p class="text-xs text-brand-text">Review candidates</p>
                        </div>
                    </div>
                </a>
                
                <a href="/analytics" class="group p-4 border border-gray-200 rounded-lg hover:border-purple-500 hover:shadow-sm transition-all">
                    <div class="flex items-center">
                        <i class="fas fa-chart-bar text-purple-600 text-lg group-hover:scale-110 transition-transform"></i>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-brand-heading">View Analytics</p>
                            <p class="text-xs text-brand-text">Performance insights</p>
                        </div>
                    </div>
                </a>
                
                <a href="/feedback" class="group p-4 border border-gray-200 rounded-lg hover:border-brand-success hover:shadow-sm transition-all">
                    <div class="flex items-center">
                        <i class="fas fa-star text-brand-success text-lg group-hover:scale-110 transition-transform"></i>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-brand-heading">Health Score</p>
                            <p class="text-xs text-brand-text">Submit feedback</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <h2 class="text-lg font-semibold text-brand-heading mb-4">Recent Activity</h2>
            <div class="space-y-4">
                <div class="flex items-center p-3 bg-blue-50 rounded-lg">
                    <i class="fas fa-user-plus text-brand-primary"></i>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-brand-heading">Sarah Johnson applied</p>
                        <p class="text-xs text-brand-text">Frontend Developer Intern • 2 hours ago</p>
                    </div>
                </div>
                
                <div class="flex items-center p-3 bg-orange-50 rounded-lg">
                    <i class="fas fa-briefcase text-brand-secondary"></i>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-brand-heading">New internship posted</p>
                        <p class="text-xs text-brand-text">Backend Developer Intern • 5 hours ago</p>
                    </div>
                </div>
                
                <div class="flex items-center p-3 bg-green-50 rounded-lg">
                    <i class="fas fa-check-circle text-brand-success"></i>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-brand-heading">Michael Chen shortlisted</p>
                        <p class="text-xs text-brand-text">Data Science Intern • 1 day ago</p>
                    </div>
                </div>
                
                <div class="flex items-center p-3 bg-purple-50 rounded-lg">
                    <i class="fas fa-star text-purple-600"></i>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-brand-heading">Health Score updated</p>
                        <p class="text-xs text-brand-text">Now at 8.5/10 • 2 days ago</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Internships Overview -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="p-6 border-b border-gray-200">
            <div class="flex justify-between items-center">
                <h2 class="text-lg font-semibold text-brand-heading">Active Internships</h2>
                <a href="/post-internship" class="text-brand-primary hover:text-brand-primary/80 text-sm font-medium transition-colors">
                    Post New <i class="fas fa-arrow-right ml-1"></i>
                </a>
            </div>
        </div>
        <div class="overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-brand-text uppercase tracking-wider">Role</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-brand-text uppercase tracking-wider">Applications</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-brand-text uppercase tracking-wider">Mode</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-brand-text uppercase tracking-wider">Status</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="text-sm font-medium text-brand-heading">Frontend Developer</div>
                            <div class="text-sm text-brand-text">3 months • ₹15,000/month</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-brand-heading">34 applications</div>
                            <div class="text-sm text-brand-text">8 shortlisted</div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                Remote
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-brand-success bg-opacity-10 text-brand-success">
                                Active
                            </span>
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="text-sm font-medium text-brand-heading">Data Science Intern</div>
                            <div class="text-sm text-brand-text">6 months • ₹20,000/month</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-brand-heading">28 applications</div>
                            <div class="text-sm text-brand-text">12 shortlisted</div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
                                Hybrid
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-brand-success bg-opacity-10 text-brand-success">
                                Active
                            </span>
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="text-sm font-medium text-brand-heading">Marketing Intern</div>
                            <div class="text-sm text-brand-text">4 months • ₹12,000/month</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-brand-heading">19 applications</div>
                            <div class="text-sm text-brand-text">5 shortlisted</div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                On-site
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-brand-success bg-opacity-10 text-brand-success">
                                Active
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include('partials/footer') %>