<%- include('partials/header') %>

<main class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
        <h1 class="text-2xl font-bold text-brand-heading">Analytics Dashboard</h1>
        <p class="text-brand-text mt-1">Track your internship program performance and insights.</p>
    </div>

    <!-- Time Period Selector -->
    <div class="mb-6">
        <div class="flex space-x-1 bg-gray-100 rounded-lg p-1 w-fit">
            <button class="px-4 py-2 text-sm font-medium rounded-md bg-white text-brand-heading shadow-sm">
                Last 30 days
            </button>
            <button class="px-4 py-2 text-sm font-medium rounded-md text-brand-text hover:text-brand-heading">
                Last 90 days
            </button>
            <button class="px-4 py-2 text-sm font-medium rounded-md text-brand-text hover:text-brand-heading">
                Last year
            </button>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <div class="flex items-center">
                <div class="p-2 bg-brand-primary bg-opacity-10 rounded-lg">
                    <i class="fas fa-eye text-brand-primary text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-brand-text">Total Views</p>
                    <p class="text-2xl font-bold text-brand-heading">1,247</p>
                    <p class="text-xs text-brand-success flex items-center mt-1">
                        <i class="fas fa-arrow-up mr-1"></i>
                        12% vs last month
                    </p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <div class="flex items-center">
                <div class="p-2 bg-brand-secondary bg-opacity-10 rounded-lg">
                    <i class="fas fa-user-plus text-brand-secondary text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-brand-text">Applications</p>
                    <p class="text-2xl font-bold text-brand-heading">248</p>
                    <p class="text-xs text-brand-success flex items-center mt-1">
                        <i class="fas fa-arrow-up mr-1"></i>
                        8% vs last month
                    </p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <div class="flex items-center">
                <div class="p-2 bg-brand-success bg-opacity-10 rounded-lg">
                    <i class="fas fa-percentage text-brand-success text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-brand-text">Conversion Rate</p>
                    <p class="text-2xl font-bold text-brand-heading">19.9%</p>
                    <p class="text-xs text-red-500 flex items-center mt-1">
                        <i class="fas fa-arrow-down mr-1"></i>
                        3% vs last month
                    </p>
                </div>
            </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
            <div class="flex items-center">
                <div class="p-2 bg-purple-100 rounded-lg">
                    <i class="fas fa-star text-purple-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-brand-text">Avg. Quality Score</p>
                    <p class="text-2xl font-bold text-brand-heading">8.2/10</p>
                    <p class="text-xs text-brand-success flex items-center mt-1">
                        <i class="fas fa-arrow-up mr-1"></i>
                        0.3 vs last month
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- Applications Over Time Chart -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-brand-heading">Applications Over Time</h2>
            </div>
            <div class="p-6">
                <div class="h-64 flex items-end justify-between space-x-2">
                    <div class="flex flex-col items-center">
                        <div class="w-8 bg-brand-primary rounded-t" style="height: 60%"></div>
                        <span class="text-xs text-brand-text mt-2">Week 1</span>
                    </div>
                    <div class="flex flex-col items-center">
                        <div class="w-8 bg-brand-primary rounded-t" style="height: 80%"></div>
                        <span class="text-xs text-brand-text mt-2">Week 2</span>
                    </div>
                    <div class="flex flex-col items-center">
                        <div class="w-8 bg-brand-primary rounded-t" style="height: 45%"></div>
                        <span class="text-xs text-brand-text mt-2">Week 3</span>
                    </div>
                    <div class="flex flex-col items-center">
                        <div class="w-8 bg-brand-primary rounded-t" style="height: 90%"></div>
                        <span class="text-xs text-brand-text mt-2">Week 4</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Performing Internships -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-brand-heading">Top Performing Internships</h2>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-brand-heading">Frontend Developer</p>
                            <p class="text-xs text-brand-text">34 applications</p>
                        </div>
                        <div class="text-right">
                            <p class="text-sm font-bold text-brand-heading">85%</p>
                            <p class="text-xs text-brand-text">conversion</p>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-brand-heading">Data Science Intern</p>
                            <p class="text-xs text-brand-text">28 applications</p>
                        </div>
                        <div class="text-right">
                            <p class="text-sm font-bold text-brand-heading">78%</p>
                            <p class="text-xs text-brand-text">conversion</p>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-brand-heading">Marketing Intern</p>
                            <p class="text-xs text-brand-text">19 applications</p>
                        </div>
                        <div class="text-right">
                            <p class="text-sm font-bold text-brand-heading">65%</p>
                            <p class="text-xs text-brand-text">conversion</p>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-brand-heading">Backend Developer</p>
                            <p class="text-xs text-brand-text">23 applications</p>
                        </div>
                        <div class="text-right">
                            <p class="text-sm font-bold text-brand-heading">58%</p>
                            <p class="text-xs text-brand-text">conversion</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Application Status Distribution -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-brand-heading">Application Status</h2>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="w-3 h-3 bg-yellow-500 rounded-full mr-2"></div>
                            <span class="text-sm text-brand-text">Pending</span>
                        </div>
                        <span class="text-sm font-medium text-brand-heading">142 (57%)</span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="w-3 h-3 bg-brand-success rounded-full mr-2"></div>
                            <span class="text-sm text-brand-text">Shortlisted</span>
                        </div>
                        <span class="text-sm font-medium text-brand-heading">56 (23%)</span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="w-3 h-3 bg-red-500 rounded-full mr-2"></div>
                            <span class="text-sm text-brand-text">Rejected</span>
                        </div>
                        <span class="text-sm font-medium text-brand-heading">50 (20%)</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Skills in Demand -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-brand-heading">Skills in Demand</h2>
            </div>
            <div class="p-6">
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-brand-text">React</span>
                        <div class="flex items-center space-x-2">
                            <div class="w-16 bg-gray-200 rounded-full h-2">
                                <div class="bg-brand-primary h-2 rounded-full" style="width: 85%"></div>
                            </div>
                            <span class="text-xs text-brand-text w-8">85%</span>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-brand-text">Python</span>
                        <div class="flex items-center space-x-2">
                            <div class="w-16 bg-gray-200 rounded-full h-2">
                                <div class="bg-brand-primary h-2 rounded-full" style="width: 72%"></div>
                            </div>
                            <span class="text-xs text-brand-text w-8">72%</span>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-brand-text">JavaScript</span>
                        <div class="flex items-center space-x-2">
                            <div class="w-16 bg-gray-200 rounded-full h-2">
                                <div class="bg-brand-primary h-2 rounded-full" style="width: 68%"></div>
                            </div>
                            <span class="text-xs text-brand-text w-8">68%</span>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-brand-text">Node.js</span>
                        <div class="flex items-center space-x-2">
                            <div class="w-16 bg-gray-200 rounded-full h-2">
                                <div class="bg-brand-primary h-2 rounded-full" style="width: 54%"></div>
                            </div>
                            <span class="text-xs text-brand-text w-8">54%</span>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-brand-text">SQL</span>
                        <div class="flex items-center space-x-2">
                            <div class="w-16 bg-gray-200 rounded-full h-2">
                                <div class="bg-brand-primary h-2 rounded-full" style="width: 46%"></div>
                            </div>
                            <span class="text-xs text-brand-text w-8">46%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Average Response Time -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="p-6 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-brand-heading">Response Metrics</h2>
            </div>
            <div class="p-6">
                <div class="space-y-6">
                    <div class="text-center">
                        <div class="text-3xl font-bold text-brand-heading">2.4</div>
                        <div class="text-sm text-brand-text">Avg Response Time (days)</div>
                    </div>
                    
                    <div class="text-center">
                        <div class="text-3xl font-bold text-brand-success">85%</div>
                        <div class="text-sm text-brand-text">Response Rate</div>
                    </div>
                    
                    <div class="text-center">
                        <div class="text-3xl font-bold text-brand-secondary">23%</div>
                        <div class="text-sm text-brand-text">Shortlist Rate</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>