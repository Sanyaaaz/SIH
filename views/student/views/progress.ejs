<script>
    function updateProgressStats() {
        const progress = JSON.parse(localStorage.getItem('progress') || '{}');
        const progressValues = Object.values(progress);
        
        const completed = progressValues.filter(status => status === 'completed').length;
        const inProgress = progressValues.filter(status => status === 'in-progress').length;
        const notStarted = 124 - completed - inProgress; // Total resources minus completed and in progress
        
        // Update counts
        document.getElementById('completed-count').textContent = completed;
        document.getElementById('in-progress-count').textContent = inProgress;
        document.getElementById('not-started-count').textContent = notStarted;
        
        // Calculate overall percentage
        const overallPercentage = Math.round((completed / 124) * 100);
        document.getElementById('overall-percentage').textContent = overallPercentage + '%';
        
        // Update progress circle
        const circle = document.querySelector('circle[stroke="#4F46E5"]');
        if (circle) {
            const circumference = 2 * Math.PI * 40; // radius = 40
            const offset = circumference - (overallPercentage / 100) * circumference;
            circle.style.strokeDashoffset = offset;
        }
    }
    
    function generateWeeklyReport() {
        const progress = JSON.parse(localStorage.getItem('progress') || '{}');
        const bookmarks = JSON.parse(localStorage.getItem('bookmarks') || '[]');
        
        // This would typically generate a detailed report
        alert(`Weekly Progress Report:
        
Resources Completed: ${Object.values(progress).filter(s => s === 'completed').length}
Resources In Progress: ${Object.values(progress).filter(s => s === 'in-progress').length}
New Bookmarks: ${bookmarks.length}
        
Keep up the great work!`);
    }
    
    // Load progress stats on page load
    document.addEventListener('DOMContentLoaded', function() {
        updateProgressStats();
        
        // Update stats every 30 seconds to reflect any changes
        setInterval(updateProgressStats, 30000);
    });
</script>
