<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="flex-shrink-0 flex items-center">
          <div class="h-8 w-8 rounded-lg bg-gradient-to-br from-indigo-600 to-orange-500 flex items-center justify-center text-white font-bold">
            IH
          </div>
          <span class="ml-2 text-xl font-bold text-gray-900">InternshipHub</span>
        </a>
        <nav class="ml-10 hidden md:flex space-x-8">
          <a href="/" class="<%= active === 'home' ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-gray-900' %> inline-flex items-center px-1 pt-1 text-sm font-medium">Home</a>
          <a href="/internships" class="<%= active === 'internships' ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-gray-900' %> inline-flex items-center px-1 pt-1 text-sm font-medium">Internships</a>

          <div class="relative" x-data="{ open:false }">
            <button type="button" class="inline-flex items-center px-1 pt-1 text-sm font-medium <%= ['resources','progress','bookmarks'].includes(active) ? 'text-indigo-600 border-b-2 border-indigo-600' : 'text-gray-600 hover:text-gray-900' %>" onclick="this.nextElementSibling.classList.toggle('hidden')">
              Resources
              <svg class="ml-1 h-4 w-4" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.21 8.29a.75.75 0 01.02-1.08z" clip-rule="evenodd"/></svg>
            </button>
            <div class="absolute mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg hidden" onclick="this.classList.add('hidden')">
              <a href="/dashboard/resources" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">All Resources</a>
              <a href="/progress" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Progress</a>
              <a href="/bookmarks" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Bookmarks</a>
            </div>
          </div>
        </nav>
      </div>
      <div class="flex items-center space-x-4">
        <% if (user) { %>
          <span class="hidden sm:inline text-sm font-medium text-gray-700">Hi, <%= user.name %></span>
          <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
            <span class="text-gray-700 text-sm font-medium"><%= user.name.charAt(0).toUpperCase() %></span>
          </div>
        <% } else { %>
          <a href="/auth/login" class="px-4 py-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors text-sm font-medium">Sign In</a>
          <a href="/auth/signup" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors text-sm font-medium">Join Now</a>
        <% } %>
      </div>
    </div>
  </div>
</header>

