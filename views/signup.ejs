<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Sign Up | InternshipHub</title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#4F46E5",
            secondary: "#F97316",
          },
          fontFamily: {
            inter: ["Inter", "sans-serif"],
            poppins: ["Poppins", "sans-serif"],
          },
        },
      },
    };
  </script>
</head>
<body class="bg-gradient-to-br from-indigo-50 via-white to-orange-50 font-inter min-h-screen m-0">

  <div class="grid grid-cols-1 md:grid-cols-2 min-h-screen">

    <!-- LEFT SIDE: Signup form with reduced padding and controlled max height -->
    <div class="flex flex-col justify-center px-6 md:px-16 py-8 max-h-screen overflow-auto bg-white">
      <div class="text-center mb-6">
        <div class="flex items-center justify-center space-x-2 mb-3">
          <div class="bg-primary p-2 rounded-lg">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 9l6 6 6-6" />
            </svg>
          </div>
          <span class="text-xl font-bold text-gray-900">InternshipHub</span>
        </div>
        <h2 class="text-2xl font-bold text-gray-900">Create your account</h2>
        <p class="text-gray-600 mt-1 text-sm md:text-base">Join thousands of students finding their perfect internships</p>
      </div>

      <form action="/auth/signup" method="POST" class="space-y-4" autocomplete="off">
        <!-- Full Name -->
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
          <div class="relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A9 9 0 1112 21a9 9 0 01-6.879-3.196z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 11a3 3 0 100-6 3 3 0 000 6z" />
            </svg>
            <input
              id="name"
              name="name"
              type="text"
              required
              placeholder="Enter your full name"
              class="w-full pl-9 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-colors text-sm"
            />
          </div>
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
          <div class="relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16 12H8m0 0v4m0-4V8m0 4h8" />
            </svg>
            <input
              id="email"
              name="email"
              type="email"
              required
              placeholder="Enter your email"
              class="w-full pl-9 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-colors text-sm"
            />
          </div>
        </div>

        <!-- Role -->
        <div>
          <label for="role" class="block text-sm font-medium text-gray-700 mb-1">I am a</label>
          <select
            id="role"
            name="role"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-colors text-sm"
          >
            <option value="" disabled selected>Select your role</option>
            <option value="student">Student - Looking for internships</option>
            <option value="industry">Industry - Posting internships</option>
            <option value="faculty">Faculty - Mentoring students</option>
          </select>
        </div>

        <!-- ABC ID -->
        <div>
        <label for="abcId" class="block text-sm font-medium text-gray-700 mb-1">ABC ID</label>
        <input
            id="abcId"
            name="abcId"
            type="text"
            placeholder="Enter your ABC ID"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-colors text-sm"
        />
        </div>


        <!-- Password -->
        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
          <div class="relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 11c1.38 0 2.5-1.12 2.5-2.5S13.38 6 12 6s-2.5 1.12-2.5 2.5 1.12 2.5 2.5 2.5z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 14s-.75 4-5 4-5-4-5-4" />
            </svg>
            <input
              id="password"
              name="password"
              type="password"
              minlength="6"
              required
              placeholder="Create a password"
              class="w-full pl-9 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-colors text-sm"
            />
          </div>
        </div>

        <!-- Confirm Password -->
        <div>
          <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
          <div class="relative">
            <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 11c1.38 0 2.5-1.12 2.5-2.5S13.38 6 12 6s-2.5 1.12-2.5 2.5 1.12 2.5 2.5 2.5z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 14s-.75 4-5 4-5-4-5-4" />
            </svg>
            <input
              id="confirmPassword"
              name="confirmPassword"
              type="password"
              minlength="6"
              required
              placeholder="Confirm your password"
              class="w-full pl-9 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-colors text-sm"
            />
          </div>
        </div>

        <!-- Terms -->
        <div class="flex items-center text-xs">
          <input id="agree-terms" name="agree-terms" type="checkbox" required class="h-4 w-4 text-primary focus:ring-primary border-gray-300 rounded" />
          <label for="agree-terms" class="ml-2 block text-gray-700">
            I agree to the
            <a href="#" class="text-primary hover:text-primary/80">Terms and Conditions</a> and
            <a href="#" class="text-primary hover:text-primary/80">Privacy Policy</a>
          </label>
        </div>

        <!-- Submit -->
        <button type="submit" class="w-full py-2 px-4 bg-primary text-white font-medium rounded-lg hover:bg-primary/90 focus:ring-2 focus:ring-primary focus:ring-offset-2 transition-colors text-sm">
          Create Account
        </button>
      </form>

      <!-- Link -->
      <div class="mt-4 text-center text-xs md:text-sm">
        <p class="text-gray-600">
          Already have an account?
          <a href="/auth/login" class="text-primary hover:text-primary/80 font-medium">Sign in here</a>
        </p>
      </div>
    </div>

    <!-- RIGHT SIDE: Image scaled smaller -->
    <div class="hidden md:flex items-center justify-center bg-gradient-to-br from-primary via-orange-50 to-secondary h-full">
      <img src="/images/image.jpg" alt="Sign up Illustration" class="object-contain h-3/5 w-3/5" />
    </div>
  </div>

  <script>
    // Password confirmation validator
    document.getElementById('confirmPassword').addEventListener('input', function () {
      const password = document.getElementById('password').value;
      const confirmPassword = this.value;
      if (password !== confirmPassword) {
        this.setCustomValidity('Passwords do not match');
      } else {
        this.setCustomValidity('');
      }
    });
  </script>
</body>
</html>